<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:padding="16dp"
    tools:context=".IngredientsCalendar">

    <!-- Date Picker -->
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="start" />

    <!-- Spinner for Category Selection -->
    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="start"
        android:layout_marginTop="8dp" />

    <!-- Nutritional Summary Row -->
    <TextView
        android:id="@+id/tv_total_calories"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:padding="8dp"
        android:text="Calories: 0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_total_protein"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:padding="8dp"
        android:text="Protein: 0g"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_total_fats"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:padding="8dp"
        android:text="Fats: 0g"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_total_carbohydrates"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:padding="8dp"
        android:text="Carbohydrates: 0g"
        android:textSize="16sp" />

    <!-- Meals List -->
    <ListView
        android:id="@+id/lv_meals"
        android:layout_width="363dp"
        android:layout_height="12dp"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginTop="16dp" />

</GridLayout>
